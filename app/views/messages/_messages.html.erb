<% @msgs.each do |msg| %>
	<div class="panel">
		<div class="panel-body">
			<strong><%= msg.user.name %></strong>

			<span class="pull-right"><%= msg.message_time %></span>
			<br>
			<div class="row-space-2">
				<%= simple_format(msg.content, html_options = {}, options = {}) %>
			</div>
			<div class="pull-right">
				<% if(current_user.admin) %>
					<%= link_to "Edit", edit_chat_message_path(@chat, msg), class: "btn btn-info" %>&nbsp;
					<%= link_to "Delete", chat_message_path(@chat, msg), method: :delete, data: {confirm: "Do you want to delete this message?"}, class: "btn btn-danger" %>
				<% end %>
			</div>
		</div>
	</div>
<% end %>