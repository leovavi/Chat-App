<div class="text-center">
	<h3 class="text-primary">New Chat</h3>
	<p> Select a user: </p>
	<% @users.each do |user| %>
		<% if user != current_user %>
			<%= user.name %>
			<%= link_to "Send Message", chats_path(sender_id: current_user.id, recipient_id: user.id), method: 'post' %>
		<% end %>
		<br>
	<% end %>
</div>